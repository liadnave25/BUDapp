<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#F5FCD9">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Storage"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#2C6E49"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <!-- כרטיס 1 - Houseplants -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card1"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#F5FCD9"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintEnd_toStartOf="@id/verticalCenter">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/houseplantsImage"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:scaleType="centerInside"
                android:contentDescription="@string/houseplants" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/houseplants"
                android:textColor="#2C6E49"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- כרטיס 2 - Outdoor Plants -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card2"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#F5FCD9"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toEndOf="@id/verticalCenter">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/outdoorPlantsImage"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:scaleType="centerInside"
                android:contentDescription="@string/outdoor_plants" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/outdoor_plants"
                android:textColor="#2C6E49"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- כרטיס 3 - Summer Plants -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card3"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#F5FCD9"
        app:layout_constraintTop_toBottomOf="@id/card1"
        app:layout_constraintEnd_toStartOf="@id/verticalCenter">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/summerPlantsImage"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:scaleType="centerInside"
                android:contentDescription="@string/summer_plants" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/summer_plants"
                android:textColor="#2C6E49"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- כרטיס 4 - Winter Plant -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card4"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#F5FCD9"
        app:layout_constraintTop_toBottomOf="@id/card2"
        app:layout_constraintStart_toEndOf="@id/verticalCenter">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/winterPlantsImage"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:scaleType="centerInside"
                android:contentDescription="@string/winter_plant" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/winter_plant"
                android:textColor="#2C6E49"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- כרטיס 5 - Spices Plants -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card5"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#F5FCD9"
        app:layout_constraintTop_toBottomOf="@id/card3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/herbsPlantsImage"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:scaleType="centerInside"
                android:contentDescription="@string/spices_plants" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/spices_plants"
                android:textColor="#2C6E49"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
