<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/rounded_card_bg">

    <TextView
        android:id="@+id/textPlantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/plant_name"
        android:textSize="18sp"
        android:textColor="#2C6E49"
        android:textStyle="bold" />

    <!-- שורת סיכום: תוויות כמות/מחיר ליחידה/סה״כ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/textQuantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/quantity"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/textUnitPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/per_unit"
            android:textAlignment="center"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/textTotalPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/total"
            android:textAlignment="viewEnd"
            android:textColor="#333333" />
    </LinearLayout>

    <!-- שורת פעולות: שינוי כמות ומחיקה -->
    <LinearLayout
        android:id="@+id/actionsRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <!-- שינוי כמות -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="start|center_vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDecrease"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:text="−"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_green_button"
                android:backgroundTint="@null"
                android:foregroundTint="@null"
                android:contentDescription="@string/decrease_quantity" />

            <TextView
                android:id="@+id/qtyValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="16sp"
                android:layout_marginHorizontal="12dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnIncrease"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:text="+"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_green_button"
                android:backgroundTint="@null"
                android:foregroundTint="@null"
                android:contentDescription="@string/increase_quantity" />

        </LinearLayout>

        <!-- מחיקה -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRemove"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:minHeight="48dp"
            android:paddingHorizontal="16dp"
            android:text="@string/remove"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_green_button"
            android:backgroundTint="@null"
            android:foregroundTint="@null"
            android:contentDescription="@string/remove" />
    </LinearLayout>

</LinearLayout>
